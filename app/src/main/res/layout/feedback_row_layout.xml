<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"

    card_view:cardCornerRadius="2dp"
    android:elevation="6dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text ="@string/place_holder_question"
            android:layout_marginStart="8dp" />

        <SeekBar
            android:id="@+id/weightage_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_tv"
            android:layout_margin="16dp"
            android:max="10"
            android:progress="5"
            android:thumb="@drawable/seekbar_position"
            android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
            />

        <EditText
            android:id="@+id/key_note_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/key_notes"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:inputType="textMultiLine"
            android:layout_below="@id/weightage_seek_bar"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
